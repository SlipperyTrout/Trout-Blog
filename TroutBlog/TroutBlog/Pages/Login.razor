@page "/login"
@using Data.Entities

<div class="container">
    <EditForm Model="@login" OnSubmit="@HandleSubmit">
        <h2 class="d-flex justify-content-center">Trout Blog Login</h2>
        <div class="mb-2 d-flex justify-content-center">
            <InputText type="email" class="login-textbox" placeholder="Email" @bind-Value="login.Email" />
        </div>
        <div class="mb-2 d-flex justify-content-center">
            <InputText type="password" class="login-textbox" placeholder="Password" @bind-Value="login.Password" />
        </div>
        <div>
            <p class="d-flex justify-content-center">Not a memeber?&nbsp;<a href="/register" class="link-primary">Register</a></p>
        </div>
        <div class="d-flex justify-content-center">
            <button type="submit" class="button-login">Login</button>
        </div>
    </EditForm>
</div>


